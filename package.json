{
  "name": "taskboard-monorepo",
  "version": "1.0.0",
  "description": "TaskBoard - Fullstack real-time task management application",
  "private": true,
  "scripts": {
    "dev": "pnpm --filter './apps/*' dev",
    "dev:api": "pnpm --filter api dev",
    "dev:web": "pnpm --filter web dev",
    "dev:worker": "pnpm --filter worker dev",
    "build": "pnpm --filter './apps/*' build",
    "test": "pnpm --filter './apps/*' test",
    "lint": "pnpm --filter './apps/*' lint",
    "format": "prettier --write \"**/*.{js,jsx,json,md}\"",
    "docker:start": "docker-compose up -d --build",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "docker:restart": "docker-compose restart",
    "docker:clean": "docker-compose down -v"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "eslint": "^8.57.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  },
  "packageManager": "pnpm@8.15.4+sha512.0bd3a9be9eb0e9a692676deec00a303ba218ba279d99241475616b398dbaeedd11146f92c2843458f557b1d127e09d4c171e105bdcd6b61002b39685a8016b9e"
}
